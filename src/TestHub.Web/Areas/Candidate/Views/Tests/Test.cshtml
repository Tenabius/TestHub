@model TestViewModel
@inject IPartialViewResolver Resolver

<section>
    <div class="container">
        <h3>@Model.Title</h3>
        <form id="Test" asp-action="Submit" method="post">
            @{
                for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <div class="row">
                        <div class="col-1 w-auto">
                            <span>@(i+1).</span>
                        </div>
                        <div class="col">
                            @(await Html.PartialAsync(Resolver.GetPartialViewName(Model.Questions[i].GetType()), Model.Questions[i]))
                        </div>
                    </div>
                }
            }
        </form>
        <input type="submit" form="Test" value="Submit"/>
    </div>
</section>